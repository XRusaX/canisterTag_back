<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	version="3.0" xmlns="http://java.sun.com/xml/ns/javaee">

	<!-- Servlets -->
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>

	<servlet>
		<servlet-name>appService</servlet-name>
		<servlet-class>com.ma.common.gwtapp.server.AppServiceImpl</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>appService</servlet-name>
		<url-pattern>/hmcrfidserver/application</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>loginService</servlet-name>
		<servlet-class>com.ma.common.gwtapp.server.LoginServiceImpl</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>loginService</servlet-name>
		<url-pattern>/hmcrfidserver/login</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>commomdataService</servlet-name>
		<servlet-class>com.ma.common.gwtapp.server.CommonDataServiceImpl2</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>commomdataService</servlet-name>
		<url-pattern>/hmcrfidserver/commonData</url-pattern>
	</servlet-mapping>


	<servlet>
		<servlet-name>RuslanTest</servlet-name>
		<servlet-class>com.ma.hmcapp.servlet.RuslanTestServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>RuslanTest</servlet-name>
		<url-pattern>/test</url-pattern>
	</servlet-mapping>

	<servlet>
        <servlet-name>app</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <init-param>
            <param-name>contextConfigLocation</param-name>
            <param-value></param-value>
        </init-param>
    </servlet>

    <servlet-mapping>
        <servlet-name>app</servlet-name>
        <url-pattern>/api/*</url-pattern>
    </servlet-mapping>
    

	<!-- Default page to serve -->
	<welcome-file-list>
		<welcome-file>HmcRfidServer.html</welcome-file>
	</welcome-file-list>

</web-app>
